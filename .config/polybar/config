# Base configuration

[colors]
background                = ${xrdb:background:#222}
foreground                = ${xrdb:foreground:#222}
bar-active                = ${xrdb:foreground:#222}
bar-inactive              = ${xrdb:color8:#222}
bar-urgent                = ${xrdb:color9:#222}
date                      = ${xrdb:color3:#222}
time                      = ${xrdb:color2:#222}

[bar/base]
width = 100%
height = 42
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 0

border-size = 5
border-color = ${colors.background}

module-margin-left = 1
module-margin-right = 1

font-0                    = "Ubuntu:style=Regular:size=12;4"
font-1                    = "Input Nerd Font:style=Regular:size=12;4"
font-2                    = "Font Awesome 5 Free:style=Solid:size=12;4"

; MODULES SETUP
modules-left = bspwm
modules-center = windowtitle spotify
modules-right = filesystem cpu memory date shutdown

wm-restack                = bspwm
wm-name                   = bspwm
tray-position = right
tray-maxsize = 24

# Modules
[module/bspwm]
type                      = internal/bspwm

format                    = <label-state>

label-separator           = " "
label-focused             = ""
label-occupied            = ""
label-urgent              = ""
label-empty               = ""

label-active-foreground   = ${colors.bar-active}
label-occupied-foreground = ${colors.bar-inactive}
label-urgent-foreground   = ${colors.bar-urgent}
label-empty-foreground    = ${colors.bar-inactive}

label-focused-padding = 2
label-urgent-padding = 2
label-occupied-padding = 2
label-empty-padding = 2

[module/memory]
type = internal/memory
; Seconds to sleep between updates
interval = 3

label = " %percentage_used%%"

format-prefix-padding = 2
format-prefix-font = 3
format-prefix-foreground = #ffffff
format-background = ${colors.background}
format-foreground = ${colors.foreground}

[module/separator]
type                      = custom/text

content                   = " | "
content-foreground        = ${colors.foreground}

[module/pulse]
type                      = custom/script

tail                      = true
label                     = %output%

exec                      = pulseaudio-control listen
click-right               = exec pavucontrol &
click-left                = pulseaudio-control togmute
click-middle              = pulseaudio-control next-sink
scroll-up                 = pulseaudio-control up
scroll-down               = pulseaudio-control down
label-foreground          = ${colors.foreground}

[module/date]
type = internal/date
interval = 1

date =
date-alt = "%b %d, %Y  "
time = "%I:%M"
time-alt = "%H:%M:%S"

format-prefix-foreground = ${colors.foreground}
format-underline = #0a6cf5
label = %date%%time%

[module/volume]
type = internal/pulseaudio

format-volume = <ramp-volume>
label-volume-foreground = ${colors.foreground}
ramp-volume-foreground = ${colors.foreground}
label-volume =

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

label-muted = ﱝ
label-muted-foreground = ${colors.foreground}
