# Xorg settings {{{
xlayoutdisplay -q

# Stop screen from going blank
xset s off
xset -dpms
xset s noblank

# Hide Cursor when typing
xbanish &

# Faster key repeat and delay
xset r rate 210 40

# Fix cursor theme for bspwm
xsetroot -cursor_name left_ptr
